# Database (Required for full functionality)
# Get these from Vercel Dashboard > Storage > Postgres
POSTGRES_PRISMA_URL="postgres://username:password@host:port/database?sslmode=require"
POSTGRES_URL_NON_POOLING="postgres://username:password@host:port/database?sslmode=require"

# File Storage (Required for file uploads)
# Get this from Vercel Dashboard > Storage > Blob
BLOB_READ_WRITE_TOKEN="your_blob_token_here"

# Optional: Skip environment validation during build
SKIP_ENV_VALIDATION="true"

# Development
NODE_ENV="development"